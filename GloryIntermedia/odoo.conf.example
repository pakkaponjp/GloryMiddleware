[options]
; Directory for filestore(attachments, images.)
data_dir = /home/tungmay/.local/share/glory_intermedia

; Path to your addons (adjust if using custom modules)
addons_path = /home/tungmay/Projects/Freelance/GloryMiddleware/GloryIntermedia/odoo/addons,/home/tungmay/Projects/Freelance/GloryMiddleware/GloryIntermedia/custom_addons

; PostgreSQL connection settings
db_host = localhost
db_port = 5432
db_user = odoo
db_password = odoo

; HTTP main port (default is 8069)
http_port = 8069
; Gevent port (default is 8072)
gevent_port = 8072

; Number of workers processes (needed for production and longpolling)
workers = 2

; Enable proxy mode if behind a reverse proxy (Set as True when using like Nginx)
proxy_mode = False

; Master password for creating databases via web interface
admin_passwd = abc123

; Logging
log_level = debug
log_file = /home/tungmay/Projects/Freelance/GloryMiddleware/GloryIntermedia/odoo.log

; Optional performance settings (can be adjusted later)
limit_memory_soft = 512000000
limit_memory_hard = 640000000
limit_time_real = 600
limit_time_cpu = 300

; =============================================================================
; GAS STATION CASH - POS SETTINGS
; =============================================================================
; POS Terminal ID (used for identifying terminal in POS commands)
pos_terminal_id = TERM-01

; Default staff ID when not provided in CloseShift/EndOfDay requests
pos_default_staff_id = DEFAULT-STAFF

; =============================================================================
; GAS STATION CASH - COLLECTION BOX SETTINGS
; =============================================================================
; CloseShift: Whether to collect cash to collection box on shift close
; Values: true | false
close_shift_collect_cash = false

; EndOfDay: How to collect cash at end of day
; Values: all | except_reserve
; - all: Collect all cash to box
; - except_reserve: Keep reserve/change amount, collect the rest
end_of_day_collect_mode = except_reserve

; =============================================================================
; END OF DAY RESERVE CONFIGURATION
; =============================================================================
; Master switch: enable/disable reserve keeping on EndOfDay
; Values: true | false
; - true: Keep reserve denominations (for change) after EndOfDay
; - false: Collect ALL cash on EndOfDay (no reserve kept)
end_of_day_keep_reserve = true

; Reserve amount to keep when mode is 'except_reserve' (in THB/EUR - unit currency)
; This is a FALLBACK if no denomination breakdown is specified
; Example: 5000 means keep ฿5,000 or €50.00 (depends on currency unit)
end_of_day_reserve_amount = 5000

; =============================================================================
; RESERVE DENOMINATION BREAKDOWN (for precise float management)
; =============================================================================
; Format: JSON array of denominations to keep
; Each item: {"fv": face_value_in_cents, "qty": quantity, "device": 1=notes|2=coins}
;
; Example for Thai Baht (keeping ฿5,500 float):
;   Notes: 5x฿100, 10x฿50 = ฿500 + ฿500 = ฿1,000
;   Coins: 50x฿10, 100x฿5, 100x฿2, 100x฿1 = ฿500 + ฿500 + ฿200 + ฿100 = ฿1,300
;   Total float: ฿2,300
;
; Note: fv is in smallest unit (satang for THB, cents for EUR)
; THB: ฿100 = fv:10000, ฿50 = fv:5000, ฿20 = fv:2000, ฿10 = fv:1000
; EUR: €50 = fv:5000, €20 = fv:2000, €10 = fv:1000, €0.50 = fv:50
;
end_of_day_reserve_denoms = [{"fv": 5000, "qty": 5, "device": 10}, {"fv": 2000, "qty": 10, "device": 1}, {"fv": 1000, "qty": 10, "device": 2}, {"fv": 500, "qty": 10, "device": 2}, {"fv": 200, "qty": 10, "device": 2}, {"fv": 100, "qty": 10, "device": 2}]

; Alternative: Simple reserve by total amount per device (ignored if denoms specified)
; end_of_day_reserve_notes = 1000
; end_of_day_reserve_coins = 1300

; =============================================================================
; POS TCP CONNECTION SETTINGS
; Used by: pos_commands.py, pos_gateway.py, pos_http_proxy.py
; =============================================================================
[pos_http_config]
; POS Vendor type determines URL paths for API calls
; Values: firstpro
;pos_vendor = firstpro
pos_vendor = firstpro

; POS Server IP address
; Use 127.0.0.1 for local mock server
; Down here is the test IP for firstpro POS, change as needed for your network setup
;pos_host = 192.168.0.207
; For local testing with mock POS server, use localhost
pos_host = 127.0.0.1

; POS Server port
; Down here is the test port for firstpro POS, change as needed for your network setup
;pos_port = 8080
; For local testing with mock POS server, use 9001
pos_port = 9001

; Connection timeout in seconds
pos_timeout = 5.0

; =============================================================================
; FCC (GLORY CASH RECYCLER) CONNECTION SETTINGS
; Used by: fcc_proxy.py
; =============================================================================
[fcc_config]
; Glory FCC API Host
fcc_host = 127.0.0.1

; Glory FCC API Port
fcc_port = 5000

; Connection timeout in seconds
fcc_timeout = 10.0

