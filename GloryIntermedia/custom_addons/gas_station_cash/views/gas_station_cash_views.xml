<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form View for Cash Deposit -->
        <record id="view_gas_station_cash_deposit_form" model="ir.ui.view">
            <field name="name">gas.station.cash.deposit.form</field>
            <field name="model">gas.station.cash.deposit</field>
            <field name="arch" type="xml">
                <form string="Cash Deposit">
                    <header>
                        <button name="action_confirm" string="Confirm" type="object"
                            class="btn-primary"
                            visibility="draft" />
                        <button name="action_audit" string="Audit" type="object"
                            visibility="confirmed" />
                        <button name="action_draft" string="Set to Draft" type="object"
                            visibility="not draft" />
                        <field name="state" widget="statusbar"
                            statusbar_visible="draft,confirmed,audited" />
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1" />
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="staff_id" />
                                <field name="date" />
                            </group>
                            <group>
                                <field name="total_amount" widget="monetary"
                                    options="{'currency_field': 'company_currency_id'}" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Deposit Lines">
                                <field name="deposit_line_ids">
                                    <tree editable="bottom">
                                        <field name="currency_denomination" />
                                        <field name="quantity" />
                                        <field name="subtotal" widget="monetary"
                                            options="{'currency_field': 'company_currency_id'}"
                                            sum="Total" />
                                    </tree>
                                    <form>
                                        <group>
                                            <field name="currency_denomination" />
                                            <field name="quantity" />
                                            <field name="subtotal" widget="monetary"
                                                options="{'currency_field': 'company_currency_id'}" />
                                        </group>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" />
                        <field name="activity_ids" />
                        <field name="message_ids" />
                    </div>
                </form>
            </field>
        </record>

        <!-- Tree View for Cash Deposit -->
        <record id="view_gas_station_cash_deposit_tree" model="ir.ui.view">
            <field name="name">gas.station.cash.deposit.tree</field>
            <field name="model">gas.station.cash.deposit</field>
            <field name="arch" type="xml">
                <tree string="Cash Deposits">
                    <field name="name" />
                    <field name="staff_id" />
                    <field name="date" />
                    <field name="total_amount" widget="monetary" sum="Total"
                        options="{'currency_field': 'company_currency_id'}" />
                    <field name="state" />
                </tree>
            </field>
        </record>

        <!-- Action for Cash Deposits -->
        <record id="action_gas_station_cash_deposit" model="ir.actions.act_window">
            <field name="name">Cash Deposits</field>
            <field name="res_model">gas.station.cash.deposit</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Action for POS Deposits (same model; later weâ€™ll filter only POS-origin ones) -->
        <record id="action_gas_station_cash_pos_deposit" model="ir.actions.act_window">
            <field name="name">POS Deposits</field>
            <field name="res_model">gas.station.cash.deposit</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('is_pos_related', '=', True)]</field>
        </record>

        <!-- Sequence for Cash Deposit Reference -->
        <record id="seq_cash_deposit_sequence" model="ir.sequence">
            <field name="name">Cash Deposit Sequence</field>
            <field name="code">gas.station.cash.deposit.sequence</field>
            <field name="prefix">DEP</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False" />
        </record>

        <!-- Menu for Cash Management -->
        <menuitem id="menu_gas_station_cash_root" name="Cash Management"
            parent="gas_station_erp_mini.menu_gas_station_root"
            sequence="20" />

        <!-- Menu for Cash Deposits (all types) -->
        <menuitem id="menu_gas_station_cash_deposit"
            name="Cash Deposits"
            parent="menu_gas_station_cash_root"
            action="action_gas_station_cash_deposit"
            sequence="10" />

        <!-- Menu for POS Deposits -->
        <menuitem id="menu_gas_station_cash_pos_deposit"
            name="POS Deposits"
            parent="menu_gas_station_cash_root"
            action="action_gas_station_cash_pos_deposit"
            sequence="15" />

        <!-- Menu for Products (ROOT, NO ACTION) -->
        <menuitem id="menu_gas_station_products_root"
            name="Products"
            parent="gas_station_erp_mini.menu_gas_station_root"
            sequence="40" />

