<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_product_form_gas_station_cash" model="ir.ui.view">
            <field name="name">product.template.form.gas.station.cash</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <!-- Add a checkbox in the Sales or POS related area -->
                <xpath expr="//group[hasclass('oe_subtotal')]" position="after">
                    <group string="Gas Station Cash">
                        <field name="is_gas_pos_related"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
