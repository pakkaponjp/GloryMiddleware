<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- ================================================================== -->
        <!-- FORM VIEW -->
        <!-- ================================================================== -->
        <record id="view_gas_station_cash_withdrawal_form" model="ir.ui.view">
            <field name="name">gas.station.cash.withdrawal.form</field>
            <field name="model">gas.station.cash.withdrawal</field>
            <field name="arch" type="xml">
                <form string="Cash Withdrawal">
                    <header>
                        <button name="action_confirm" string="Confirm" type="object"
                            class="btn-primary"
                            invisible="state != 'draft'" />
                        <button name="action_audit" string="Audit" type="object"
                            invisible="state != 'confirmed'" />
                        <button name="action_draft" string="Set to Draft" type="object"
                            invisible="state == 'draft'" />
                        <field name="state" widget="statusbar"
                            statusbar_visible="draft,confirmed,audited" />
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" icon="fa-cog" disabled="1">
                                <field name="glory_status" widget="badge" 
                                    decoration-info="glory_status == 'pending'"
                                    decoration-success="glory_status == 'collected'"
                                    decoration-warning="glory_status == 'dispensed'"
                                    decoration-danger="glory_status == 'failed'"/>
                                <span>Glory Status</span>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1" />
                            </h1>
                        </div>
                        <group>
                            <group string="Basic Info">
                                <field name="staff_id" />
                                <field name="date" />
                                <field name="company_id" groups="base.group_multi_company" />
                                <field name="currency_id" groups="base.group_multi_currency" />
                            </group>
                            <group string="Withdrawal Details">
                                <field name="withdrawal_type" />
                                <field name="total_amount" widget="monetary"
                                    options="{'currency_field': 'currency_id'}" />
                                <field name="reason" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Withdrawal Lines" name="lines">
                                <field name="withdrawal_line_ids">
                                    <tree editable="bottom">
                                        <field name="denomination_type" />
                                        <field name="currency_denomination" />
                                        <field name="quantity" />
                                        <field name="subtotal" widget="monetary"
                                            options="{'currency_field': 'currency_id'}"
                                            sum="Total" />
                                    </tree>
                                    <form>
                                        <group>
                                            <field name="denomination_type" />
                                            <field name="currency_denomination" />
                                            <field name="quantity" />
                                            <field name="subtotal" widget="monetary"
                                                options="{'currency_field': 'currency_id'}" />
                                        </group>
                                    </form>
                                </field>
                            </page>
                            <page string="Glory Machine Info" name="glory_info">
                                <group>
                                    <group string="Transaction">
                                        <field name="glory_session_id" />
                                        <field name="glory_transaction_id" />
                                        <field name="glory_status" widget="badge"
                                            decoration-info="glory_status == 'pending'"
                                            decoration-success="glory_status == 'collected'"
                                            decoration-warning="glory_status == 'dispensed'"
                                            decoration-danger="glory_status == 'failed'" />
                                    </group>
                                </group>
                                <group string="Raw Response JSON" colspan="2">
                                    <field name="glory_response_json" nolabel="1" />
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" />
                        <field name="activity_ids" />
                        <field name="message_ids" />
                    </div>
                </form>
            </field>
        </record>

        <!-- ================================================================== -->
        <!-- TREE VIEW -->
        <!-- ================================================================== -->
        <record id="view_gas_station_cash_withdrawal_tree" model="ir.ui.view">
            <field name="name">gas.station.cash.withdrawal.tree</field>
            <field name="model">gas.station.cash.withdrawal</field>
            <field name="arch" type="xml">
                <tree string="Cash Withdrawals" 
                    decoration-info="state=='draft'" 
                    decoration-success="state=='confirmed'" 
                    decoration-muted="state=='audited'">
                    <field name="name" />
                    <field name="date" />
                    <field name="staff_id" />
                    <field name="withdrawal_type" />
                    <field name="total_amount" widget="monetary" sum="Total"
                        options="{'currency_field': 'currency_id'}" />
                    <field name="glory_status" optional="show" widget="badge"
                        decoration-info="glory_status == 'pending'"
                        decoration-success="glory_status == 'collected'"
                        decoration-warning="glory_status == 'dispensed'"
                        decoration-danger="glory_status == 'failed'" />
                    <field name="state" widget="badge" 
                        decoration-info="state=='draft'"
                        decoration-success="state=='confirmed'"
                        decoration-muted="state=='audited'" />
                </tree>
            </field>
        </record>

        <!-- ================================================================== -->
        <!-- SEARCH VIEW -->
        <!-- ================================================================== -->
        <record id="view_gas_station_cash_withdrawal_search" model="ir.ui.view">
            <field name="name">gas.station.cash.withdrawal.search</field>
            <field name="model">gas.station.cash.withdrawal</field>
            <field name="arch" type="xml">
                <search string="Search Cash Withdrawals">
                    <field name="name" />
                    <field name="staff_id" />
                    <field name="glory_transaction_id" />
                    <separator />
                    <filter string="Today" name="filter_today" 
                        domain="[('date', '&gt;=', (context_today() - relativedelta(days=0)).strftime('%Y-%m-%d 00:00:00')),
                                 ('date', '&lt;=', (context_today() + relativedelta(days=1)).strftime('%Y-%m-%d 00:00:00'))]" />
                    <separator />
                    <filter string="General" name="filter_general" 
                        domain="[('withdrawal_type', '=', 'general')]" />
                    <filter string="Change/Float" name="filter_change" 
                        domain="[('withdrawal_type', '=', 'change')]" />
                    <filter string="Expense" name="filter_expense" 
                        domain="[('withdrawal_type', '=', 'expense')]" />
                    <filter string="Transfer" name="filter_transfer" 
                        domain="[('withdrawal_type', '=', 'transfer')]" />
                    <separator />
                    <filter string="Pending" name="filter_pending" 
                        domain="[('glory_status', '=', 'pending')]" />
                    <filter string="Dispensed" name="filter_dispensed" 
                        domain="[('glory_status', '=', 'dispensed')]" />
                    <filter string="Collected" name="filter_collected" 
                        domain="[('glory_status', '=', 'collected')]" />
                    <filter string="Failed" name="filter_failed" 
                        domain="[('glory_status', '=', 'failed')]" />
                    <separator />
                    <filter string="Draft" name="filter_draft" 
                        domain="[('state', '=', 'draft')]" />
                    <filter string="Confirmed" name="filter_confirmed" 
                        domain="[('state', '=', 'confirmed')]" />
                    <filter string="Audited" name="filter_audited" 
                        domain="[('state', '=', 'audited')]" />
                    <group expand="0" string="Group By">
                        <filter string="Staff" name="group_staff" 
                            context="{'group_by': 'staff_id'}" />
                        <filter string="Withdrawal Type" name="group_type" 
                            context="{'group_by': 'withdrawal_type'}" />
                        <filter string="Date" name="group_date" 
                            context="{'group_by': 'date:day'}" />
                        <filter string="Glory Status" name="group_glory_status" 
                            context="{'group_by': 'glory_status'}" />
                        <filter string="State" name="group_state" 
                            context="{'group_by': 'state'}" />
                    </group>
                </search>
            </field>
        </record>

        <!-- ================================================================== -->
        <!-- ACTIONS -->
        <!-- ================================================================== -->
        <record id="action_gas_station_cash_withdrawal" model="ir.actions.act_window">
            <field name="name">Cash Withdrawals</field>
            <field name="res_model">gas.station.cash.withdrawal</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
        </record>

        <!-- ================================================================== -->
        <!-- SEQUENCE -->
        <!-- ================================================================== -->
        <record id="seq_cash_withdrawal_sequence" model="ir.sequence">
            <field name="name">Cash Withdrawal Sequence</field>
            <field name="code">gas.station.cash.withdrawal.sequence</field>
            <field name="prefix">WDR</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False" />
        </record>

        <!-- ================================================================== -->
        <!-- MENU -->
        <!-- ================================================================== -->
        <menuitem id="menu_gas_station_cash_withdrawal"
            name="Cash Withdrawals"
            parent="menu_gas_station_cash_root"
            action="action_gas_station_cash_withdrawal"
            sequence="12" />

    </data>
</odoo>