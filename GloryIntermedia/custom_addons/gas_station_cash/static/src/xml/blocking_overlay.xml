<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
  <t t-name="gas_station_cash.BlockingOverlay" owl="1">
    <t t-if="overlay">
      <t t-if="overlay.state">
        <t t-if="overlay.state.visible">
          <div class="gsc_blocking_overlay">
            <div class="gsc_overlay_card">
              <div class="gsc_overlay_title">
                <t t-esc="overlay.state.action || 'Processing'"/>
              </div>
              <div class="gsc_overlay_msg">
                <t t-esc="overlay.state.message || 'Processing...'"/>
              </div>
              <div class="gsc_overlay_sub">
                <t t-esc="overlay.state.request_id || ''"/>
              </div>
              <div class="gsc_overlay_spinner">‚è≥</div>
            </div>
          </div>
        </t>
      </t>
    </t>
  </t>
</templates>
