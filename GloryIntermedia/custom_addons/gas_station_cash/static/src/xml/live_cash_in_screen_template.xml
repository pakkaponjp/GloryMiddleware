<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="gas_station_cash.LiveCashInScreen" owl="1">
        <div class="live-cash-in-container">
            <div class="live-cash-in-card">
                <!-- Header -->
                <div class="cash-in-header">
                    <h2 class="cash-in-title">Cash Deposit</h2>
                    <p class="cash-in-subtitle">Insert notes and coins into the machine</p>
                </div>

                <!-- Machine Image -->
                <div class="cash-in-image">
                    <img src="/gas_station_cash/static/img/cash_in.png" alt="Cash In"/>
                </div>

                <!-- Live Amount Display -->
                <div class="cash-in-amount-wrapper">
                    <div class="cash-in-amount-card">
                        <span class="cash-in-label">Total Counted</span>
                        <div class="cash-in-amount">
                            <span class="currency">à¸¿</span>
                            <span class="amount-value" t-esc="state.liveAmount.toLocaleString('en-US', {minimumFractionDigits: 2, maximumFractionDigits: 2})"/>
                        </div>
                        <div class="cash-in-status">
                            <t t-if="state.busy">
                                <span class="status-dot busy"/>
                                <span class="status-label">Processing...</span>
                            </t>
                            <t t-else="">
                                <span class="status-dot active"/>
                                <span class="status-label">Ready to accept cash</span>
                            </t>
                        </div>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="cash-in-actions">
                    <button class="cash-in-btn cash-in-btn-confirm"
                            t-att-disabled="state.busy"
                            t-on-click="_confirm">
                        <i class="fa fa-check"/>
                        <span>Confirm</span>
                    </button>
                    <button class="cash-in-btn cash-in-btn-cancel"
                            t-att-disabled="state.busy"
                            t-on-click="_cancel">
                        <i class="fa fa-times"/>
                        <span>Cancel</span>
                    </button>
                </div>
            </div>
        </div>
    </t>
</templates>