<t t-name="gas_station_cash.CashDepositSummaryScreen" owl="1">
  <div class="o_cash_operation_summary container text-center p-4">

    <!-- Title -->
    <h2 class="mb-3">
      <t t-esc="props.title or 'Summary'"/>
    </h2>

    <!-- Main amount card -->
    <div class="card shadow-sm p-4 mb-4">
      <h4 class="mb-2">
        <t t-esc="props.mainLabel or 'Total amount'"/>
      </h4>
      <div class="display-5 my-2" style="color: #0348c9ff">
        à¸¿<t t-esc="props.amount"/>
      </div>
      <t t-if="props.subtitle">
        <div class="text-muted mt-2">
          <t t-esc="props.subtitle"/>
        </div>
      </t>
    </div>

    <!-- Dynamic summary items list (optional) -->
    <t t-if="props.items and props.items.length">
      <ul class="list-group mb-4">
        <t t-foreach="props.items" t-as="item" t-key="item.key or item.label">
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <span><t t-esc="item.label"/></span>
            <span class="fw-bold"><t t-esc="item.value"/></span>
          </li>
        </t>
      </ul>
    </t>

    <!-- Actions -->
    <div class="d-flex justify-content-center gap-3 mt-3">
      <button class="btn btn-primary btn-lg px-4"
              t-on-click="props.onConfirm">
        OK
      </button>

      <t t-if="props.onBack">
        <button class="btn btn-outline-secondary btn-lg px-4"
                t-on-click="props.onBack">
          Back
        </button>
      </t>
    </div>
  </div>
</t>