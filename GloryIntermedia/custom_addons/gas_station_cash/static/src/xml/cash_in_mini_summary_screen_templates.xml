<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="gas_station_cash.CashInMiniSummaryScreen" owl="1">
        <div class="summary-container">
            <div class="summary-card">
                <!-- Success Icon -->
                <div class="summary-icon">
                    <i class="fa fa-check-circle"/>
                </div>

                <!-- Title -->
                <h2 class="summary-title">Deposit Complete</h2>
                <p class="summary-subtitle">Transaction successful</p>

                <!-- Amount Display -->
                <div class="summary-amount-card">
                    <span class="summary-amount-label">Total Deposited</span>
                    <div class="summary-amount">
                        <span class="summary-currency">฿</span>
                        <span class="summary-amount-value" t-esc="(props.totalAmount || 0).toLocaleString('en-US', {minimumFractionDigits: 2, maximumFractionDigits: 2})"/>
                    </div>
                </div>

                <!-- Summary Items -->
                <t t-if="props.summaryItems and props.summaryItems.length">
                    <div class="summary-details">
                        <t t-foreach="props.summaryItems" t-as="item" t-key="item.label">
                            <div class="summary-row">
                                <span class="summary-row-label" t-esc="item.label"/>
                                <span class="summary-row-value">
                                    <t t-if="item.label === 'Amount'">
                                        ฿<t t-esc="(item.value || 0).toLocaleString('en-US', {minimumFractionDigits: 2, maximumFractionDigits: 2})"/>
                                    </t>
                                    <t t-else="">
                                        <t t-esc="item.value"/>
                                    </t>
                                </span>
                            </div>
                        </t>
                    </div>
                </t>

                <!-- Auto Return Notice -->
                <div class="summary-notice">
                    <i class="fa fa-clock-o"/>
                    <span>Returning to home in 3 seconds...</span>
                </div>

                <!-- Done Button -->
                <button class="summary-btn" t-on-click="_onConfirm">
                    <i class="fa fa-home"/>
                    <span>Done</span>
                </button>
            </div>
        </div>
    </t>
</templates>